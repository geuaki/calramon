<%- layout('layouts/main.ejs')%>

<div class="container">
    <div class="row">
        <!-- FORM -->
        <div class="col-md-5">
            <div class="card">
                <div class="card-body">
                    <form action="/add" method="post">
                        <div class="form-group">
                            <input type="text" name="name" id="name" placeholder="Name" class="form-control">
                        </div>
                        <div class="form-group">
                            <input type="text" name="isKilogram" id="isKilogram" placeholder="isKilogram" class="form-control">
                        </div>
                        <div class="form-group">
                            <input type="text" name="weight" id="weight" placeholder="weight" class="form-control">
                        </div> 
                        <div class="form-group">
                            <input type="text" name="unit" id="unit" placeholder="unit" class="form-control">
                        </div> 

                        <div class="form-group">
                            <input type="text" name="price" id="price" placeholder="Price" class="form-control">
                        </div>
                        <div class="form-group">
                            <input type="text" name="category" id="category" placeholder="Categoria" class="form-control">
                        </div>
                        <div class="form-group">
                            <input type="text" name="quantity" id="quantity" placeholder="Cantidad en stock" class="form-control">
                        </div>
                        <div class="form-group">
                            <textarea  name="description" cols= 80 placeholder="Description" class="form-control">
                            </textarea>
                        </div>
                        <!-- <div class="form-group">
                            <label for="image">Select image</label>
                            <input type="file" name="image" class="form-control">
                        </div> -->
                        <button type="submit" class="btn btn-primary btn-block">
                            Add
                        </button>
                    </form>
                </div>
            </div>
        </div>
        <!-- LIST -->
        <div class="col-md-7">
            <div style="overflow-x:auto;">
                <table class="table table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>Nº</th>
                            <th>Nombre</th>
                            <th>Pes(kg)</th>
                            <th>Unitat</th>
                            <th>Precio</th>
                            <th>Categoria</th>
                            <th>Cantidad en stock</th>
                            <th>Descripcion</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% for(var i = 0; i < products.length; i++) { %>
                            <tr>
                                <td><%= i + 1 %></td>
                                <td><%= products[i].name %></td>
                                <td><%= products[i].weight %></td>
                                <td><%= products[i].unit %></td>
                                <td><%= products[i].price %> €</td>
                                <td><%= products[i].category %></td>
                                <td><%= products[i].quantity %></td>                            
                                <td><%= products[i].description %></td>
                                <!-- <td><%= products[i].image %></td> -->
                                <td>
                                    <a href="/edit/<%= products[i]._id %>" class="btn btn-info">Edit</a>
                                    <a href="/delete/<%= products[i]._id %>" class="btn btn-danger">Delete</a>
                                </td>
                            </tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>